@model XenonCMS.Areas.Admin.ViewModels.Pages.Delete

@{
    ViewBag.Title = "Delete a page";
}

<h2>Delete a page</h2>
<h4>Are you sure you want to delete this page?</h4>

<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LinkText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LinkText)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Slug)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Slug)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Html)
        </dt>

        <dd>
            <div style="max-height: 250px; overflow-y: scroll;">
                @Html.Raw(Model.Html)
            </div>
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Confirm delete" class="btn btn-danger btn-lg" />
            <div class="pull-right">
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>
    }
</div>
