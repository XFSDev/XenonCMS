@model XenonCMS.ViewModels.Blog.Delete

@{
    ViewBag.Title = "Delete a blog post";
}

<h2>Delete a blog post</h2>
<h4>Are you sure you want to delete this blog post?</h4>

<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FullPostText)
        </dt>

        <dd>
            <div style="max-height: 250px; overflow-y: scroll;">
                @Html.Raw(Model.FullPostText)
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatePosted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatePosted)
        </dd>
    </dl>

    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Confirm delete" class="btn btn-danger btn-lg" />
            <div class="pull-right">
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>
    }
</div>
